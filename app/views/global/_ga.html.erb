<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-2659691-9', 'auto');
  ga('send', 'pageview');

  <% if user_signed_in? and current_user.gamertag %>
    ga('set', '&uid', '<%= current_user.gamertag %>'); // Set the user ID using signed-in user_id.
  <% end %>

  <% if user_signed_in? and current_user.sign_in_count == 1 and not session[:tracked_registration] %>
    <% session[:tracked_registration] = true %>
    ga('send', 'event', { eventCategory: 'registration', eventAction: 'account'});
  <% end %>
</script>
