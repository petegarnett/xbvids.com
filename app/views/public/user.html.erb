<% if @user %>
  <% content_for :title do %>
    <%= @user.gamertag %>'s latest Xbox One game clips.
  <% end %>
  <% content_for :title_bar do %>
    <% if @user.is_pro? %>
      <span class="badge pro">pro</span>
    <% end %>
    <%= @user.gamertag %>'s latest game clips.
  <% end %>
  <% if @videos.count > 0 %>
    <ul class="videos-grid">
      <% @videos.each do |video| %>
        <li>
          <a href="<%= clip_path(video.clip_id) %>">
            <% if video.is_uploaded? %>
              <img class="lazy responsive" data-original="<%= ImageHelper.resized(video.cdn_thumbnail_url, 300) %>" />
            <% else %>
              <p>
                Still uploading.
              </p>
            <% end %>
          </a>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>
      <%= @user.gamertag %> has not uploaded any videos yet.
    </p>
  <% end %>
<% else %>
  <p>
    User not found.
  </p>
<% end %>
