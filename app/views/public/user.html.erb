<% if @user %>
  <% content_for :additional_title do %>
    <%= @user.gamertag %>'s latest game clips.
  <% end %>
  <% if @videos.count > 0 %>
    <ul class="videos-grid">
      <% @videos.each do |video| %>
        <li>
          <a href="<%= clip_path(video.clip_id) %>">
            <img src="https://s3-eu-west-1.amazonaws.com/xbone-thumbnails/<%= video.clip_id %>.png" />
          </a>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>
      <%= @user.gamertag %> has not uploaded any videos yet.
    </p>
  <% end %>
<% else %>
  <p>
    User not found.
  </p>
<% end %>
