<% if @user %>
  <% content_for :title do %>
    <%= @user.gamertag %>'s latest Xbox One game clips.
  <% end %>
  <% content_for :title_bar do %>
    <a href="<%= user_screenshots_path(@user.gamertag) %>">Screenshots</a>
  <% end %>

  <header class="hero">
    <h1><%= @user.gamertag %></h1>
  </header>

  <ul class="nav nav-pills">
    <li role="presentation" class="active"><a href="<%= user_path(@user.gamertag) %>">Videos</a></li>
    <li role="presentation"><a href="<%= user_screenshots_path(@user.gamertag) %>">Screenshots</a></li>
  </ul>
  <br />

  <% if @videos.count > 0 %>

    <ul class="video-list">
      <% @videos.each do |video| %>
        <li>
          <a href="<%= clip_path(video.clip_id) %>"><img src="<%= video.cdn_thumbnail_url %>" class="img-rounded img-responsive" /></a>
        </li>
      <% end %>
    </ul>

    <%= will_paginate @videos %>
  <% else %>
    <p>
      <%= @user.gamertag %> has not uploaded any videos yet.
    </p>
  <% end %>
<% else %>
  <p>
    User not found.
  </p>
<% end %>
