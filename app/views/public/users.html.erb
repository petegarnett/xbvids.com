<h1>Users</h1>

<% if @users.count > 0 %>
  <ul class="users-list">
    <% @users.each do |user| %>
      <% if user.gamertag %>
        <li>
          <%= link_to user.gamertag, user_path(user.gamertag) %>
          <% if user.is_pro? %>
            <span class="badge pro">pro</span>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <p>
    No users yet!
  </p>
<% end %>
