<h1>Games</h1>

<% if @games.count > 0 %>
  <ul class="games-list">
    <% @games.each do |game| %>
      <li>
        <a href="<%= game_path(game.xgid) %>">
          <img src="<%= game.image_box %>" width="100" />
        </a>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>
    No games yet!
  </p>
<% end %>
