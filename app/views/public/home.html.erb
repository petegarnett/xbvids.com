<h1>Users</h1>

<% if @users.count > 0 %>
  <ul class="users-list">
    <% @users.each do |user| %>
      <li><%= link_to user.gamertag, user_path(user.gamertag) %></li>
    <% end %>
  </ul>
<% else %>
  <p>
    No users yet!
  </p>
<% end %>

<h1>Videos</h1>

<% if @videos.count > 0 %>
  <ul class="videos-grid small">
    <% @videos.each do |video| %>
      <li>
        <a href="<%= clip_path(video.clip_id) %>">
          <img src="<%= video.thumbnail_large %>" />
        </a>
      </li>
    <% end %>
  </ul>
<% end %>
