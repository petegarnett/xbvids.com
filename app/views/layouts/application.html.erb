<!DOCTYPE html>
<html>
<head>
  <%= render 'global/head' %>
  <%= yield(:additional_head) %>
</head>
<body class="<% unless @no_title %>fixed-header<% end %>">

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<% unless @no_title %>
  <div class="header">
    <%= yield(:title_bar) %>
    <% if user_signed_in? %>
      You are logged in as <%= current_user.email %>.
      <%= link_to "Log out", destroy_user_session_path, :method => :delete, :data => { :confirm => 'Are you sure you want to log out?' } %>.
      <%= link_to "Dashboard", dashboard_path %>
      <% if current_user.gamertag %>
        <%= link_to "Your public profile", user_path(current_user.gamertag) %>.
      <% end %>
    <% else %>
      Want a page like this? <%= link_to "Sign up", new_user_registration_path %>.
    <% end %>
  </div>
<% end %>

<div class="content">
  <%= yield %>
</div>

<%= render 'global/ga' %>

<%= yield(:additional_footer) %>

</body>
</html>
